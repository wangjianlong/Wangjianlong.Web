
@{
    ViewBag.Title = "登录信息";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<Secure> list = ViewBag.List;
    SecureParameter parameter = ViewBag.Parameter;
    var serial = 1;
}

<h2>&nbsp;登录信息</h2>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>序号</th>
            <th>登录时间</th>
            <th>退出时间</th>
            <th>IP地址</th>
            <th>电脑名</th>
            <th>浏览器名称</th>
            <th>浏览器版本</th>
            <th>平台</th>
            <th>类型</th>
            <th>信息</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in list)
        {
            <tr>
                <td>@(serial++)</td>
                <td>@(item.LoginTime)</td>
                <td>@(item.LogoutTime.HasValue?item.LogoutTime.Value.ToString():"")</td>
                <td>@(item.Address)</td>
                <td>@(item.HostName)</td>
                <td>@(item.Browser)</td>
                <td>@(item.Version)</td>
                <td>@(item.Platform)</td>
                <td>@(item.Type)</td>
                <td>@(item.Message)</td>
            </tr>
        }
    </tbody>
</table>
@{ 
    Html.RenderPartial("_pagination", parameter.Page as object);
}

